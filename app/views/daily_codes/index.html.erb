<h1>Listing daily_codes</h1>

<table>
  <thead>
    <tr>
      <th>Code for mug</th>
      <th>Code for non mug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_codes.each do |daily_code| %>
      <tr>
        <td><%= daily_code.code_for_mug %></td>
        <td><%= daily_code.code_for_non_mug %></td>
        <td><%= link_to 'Show', daily_code %></td>
        <td><%= link_to 'Edit', edit_daily_code_path(daily_code) %></td>
        <td><%= link_to 'Destroy', daily_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily code', new_daily_code_path %>
