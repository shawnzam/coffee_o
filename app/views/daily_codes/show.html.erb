<%- model_class = DailyCode -%>
<div class="page-header">
  <h1><%=t '.title', :default => DailyCode %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:code_for_mug) %></dt>
      <dd><pre class="prettyprint"><%= @daily_code.code_for_mug %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:code_for_non_mug) %></dt>
      <dd><pre class="prettyprint"><%= @daily_code.code_for_non_mug %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              daily_codes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_daily_code_path(@daily_code), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              daily_code_path(@daily_code),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

