<%- model_class = Checkin -%>
<div class="page-header">
  <h1><%=t '.title', :default => Checkin %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:with_mug) %></dt>
      <dd><pre class="prettyprint"><%= @checkin.with_mug %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:current_score) %></dt>
      <dd><pre class="prettyprint"><%= @checkin.current_score %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              checkins_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_checkin_path(@checkin), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              checkin_path(@checkin),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

