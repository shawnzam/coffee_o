<%- model_class = CoffeeDrinker -%>
<div class="page-header">
  <h1><%=t '.title', :default => CoffeeDrinker %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone_number) %></dt>
      <dd><pre class="prettyprint"><%= @coffee_drinker.phone_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:current_score) %></dt>
      <dd><pre class="prettyprint"><%= @coffee_drinker.current_score %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              coffee_drinkers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_coffee_drinker_path(@coffee_drinker), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              coffee_drinker_path(@coffee_drinker),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

